{
    "name": "Uniovi Calendar Downloader",
    "description": "Descarga los horarios de la Universidad de Oviedo desde la p√°gina web del SIES",
    "version": "1.1.4",
    "manifest_version": 3,

    "content_scripts": [
        {
            "matches": ["https://sies.uniovi.es/serviciosacademicos/web/expedientes/calendario.faces"],
            "js": ["src/calendar.js"]
        }
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "permissions": [
        "cookies"
    ],
    "host_permissions": [
        "https://sies.uniovi.es/*"
    ]
}
